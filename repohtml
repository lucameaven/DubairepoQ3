        // Wait for DOM to be ready
        document.addEventListener('DOMContentLoaded', function() {
            // Scroll animations
            window.addEventListener('scroll', function() {
                var scrolled = window.pageYOffset;
                // We no longer have auroraBg, so remove this animation
            });
            
            // Intersection Observer for fade-in animations
            var observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            var observer = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, observerOptions);
            
            var fadeElements = document.querySelectorAll('.fade-in');
            fadeElements.forEach(function(el) {
                observer.observe(el);
            });
            
            // MODIFIED: Initialize language and charts on window.onload instead of DOMContentLoaded
            // changeLanguage(currentLang); 
        });

        // ADDED: Initialize language and charts after the full page (including scripts) is loaded
        window.onload = function() {
            // MODIFIED: Check if echarts is defined before initializing
            if (typeof echarts !== 'undefined') {
                changeLanguage(currentLang);
            } else {
                console.error("ECharts library is not loaded.");
                // Optionally, you can try loading it again or show an error message.
            }
        };
        
        function initCharts(lang) {
            // ADDED: Check if echarts is available before proceeding
            if (typeof echarts === 'undefined') {
                console.error("ECharts library is not loaded. Cannot initialize charts.");
                return; 
            }

            lang = lang || currentLang || 'zh-TW';
            // *** FIX: Access the 'charts' object within translations ***
            var t = translations[lang].charts; 

            // Dispose old charts
            if (transactionChart) transactionChart.dispose();
            if (luxuryChart) luxuryChart.dispose();
            if (developerChart) developerChart.dispose();
            if (forecastChart) forecastChart.dispose();
            // Dispose new chart instances if they exist
            if (propertySegmentsChart) propertySegmentsChart.dispose();
            if (marketStructureChart) marketStructureChart.dispose();

            // Transaction Volume Chart (Still used in Overview)
            if (document.getElementById('transactionChart')) {
                transactionChart = echarts.init(document.getElementById('transactionChart'));
                transactionChart.setOption({
                    title: { text: t.transactionTitle, textStyle: { color: '#212529', fontSize: 18 } },
                    tooltip: { trigger: 'axis' },
                    xAxis: { type: 'category', data: ['Q1 2024', 'Q2 2024', 'Q3 2024', 'Q4 2024', 'Q1 2025', 'Q2 2025', 'Q3 2025'] },
                    yAxis: { type: 'value', name: t.transactionYAxis },
                    series: [{
                        name: t.transactionSeries,
                        type: 'line',
                        smooth: true,
                        data: [42000, 45000, 47049, 48000, 52000, 54000, 59228],
                        lineStyle: { width: 3, color: '#009144' },
                        areaStyle: {
                            color: new echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                                offset: 0, color: 'rgba(0, 145, 68, 0.3)'
                            }, {
                                offset: 1, color: 'rgba(0, 145, 68, 0.05)'
                            }])
                        }
                    }]
                });
            }
            
            // Luxury Market Chart (Still used)
            if (document.getElementById('luxuryChart')) {
                luxuryChart = echarts.init(document.getElementById('luxuryChart'));
                luxuryChart.setOption({
                    title: { text: t.luxuryTitle, subtext: t.luxurySubtext, textStyle: { color: '#212529', fontSize: 18 } },
                    tooltip: { trigger: 'item' },
                    series: [{
                        type: 'pie',
                        radius: ['40%', '70%'],
                        avoidLabelOverlap: false,
                        itemStyle: { borderRadius: 10, borderColor: '#fff', borderWidth: 2 },
                        label: { show: true, position: 'outside' },
                        data: [
                            {value: 35, name: t.luxurySeries[0], itemStyle: {color: '#009144'}},
                            {value: 18, name: t.luxurySeries[1], itemStyle: {color: '#20C997'}},
                            {value: 15, name: t.luxurySeries[2], itemStyle: {color: '#FFB800'}},
                            {value: 12, name: t.luxurySeries[3], itemStyle: {color: '#FF6B6B'}},
                            {value: 23, name: t.luxurySeries[4], itemStyle: {color: '#4ECDC4'}}
                        ]
                    }]
                });
            }
            
            // Developer Performance Chart (Still used)
            if (document.getElementById('developerChart')) {
                developerChart = echarts.init(document.getElementById('developerChart'));
                developerChart.setOption({
                    title: { text: t.devTitle, textStyle: { color: '#212529', fontSize: 18 } },
                    tooltip: { trigger: 'axis', axisPointer: { type: 'shadow' } },
                    grid: { left: '3%', right: '4%', bottom: '3%', containLabel: true },
                    xAxis: { type: 'value' },
                    yAxis: { type: 'category', data: t.devYAxis },
                    series: [{
                        type: 'bar',
                        data: [
                            {value: 15, itemStyle: {color: '#95E1D3'}},
                            {value: 12, itemStyle: {color: '#4ECDC4'}},
                            {value: 14, itemStyle: {color: '#FFB800'}},
                            {value: 16, itemStyle: {color: '#20C997'}},
                            {value: 18, itemStyle: {color: '#009144'}},
                            {value: 25, itemStyle: {color: '#006633'}}
                        ],
                        label: { show: true, position: 'right' }
                    }]
                });
            }
            
            // *** NEW CHART: Property Segments ***
            // *** FIX: Added t.charts. to access the keys correctly ***
            if (document.getElementById('propertySegmentsChart')) {
                propertySegmentsChart = echarts.init(document.getElementById('propertySegmentsChart'));
                propertySegmentsChart.setOption({
                    tooltip: { trigger: 'item', formatter: '{b}: {d}%' },
                    legend: { show: false },
                    series: [{
                        name: t.segmentsDonutTitle,
                        type: 'pie',
                        radius: ['60%', '80%'],
                        avoidLabelOverlap: false,
                        label: { show: false, position: 'center' },
                        emphasis: {
                            label: {
                                show: true,
                                fontSize: 24,
                                fontWeight: 'bold',
                                formatter: '{b}\n{d}%'
                            }
                        },
                        labelLine: { show: false },
                        data: [
                            {value: 83.36, name: t.segmentsDonutSeries[0], itemStyle: {color: '#009144'}},
                            {value: 11.56, name: t.segmentsDonutSeries[1], itemStyle: {color: '#FFB800'}},
                            {value: 2.05, name: t.segmentsDonutSeries[2], itemStyle: {color: '#212529'}},
                            // Calculated: 100 - 83.36 - 11.56 - 2.05 = 3.03
                            {value: 3.03, name: t.segmentsDonutSeries[3], itemStyle: {color: '#20C997'}}
                        ]
                    }]
                });
            }

            // *** NEW CHART: Market Structure ***
            // *** FIX: Added t.charts. to access the keys correctly ***
            if (document.getElementById('marketStructureChart')) {
                marketStructureChart = echarts.init(document.getElementById('marketStructureChart'));
                marketStructureChart.setOption({
                    tooltip: { trigger: 'item', formatter: '{b}: {d}%' },
                    legend: { show: false },
                    series: [{
                        name: t.structureDonutTitle,
                        type: 'pie',
                        radius: ['60%', '80%'],
                        avoidLabelOverlap: false,
                        label: { show: false, position: 'center' },
                        emphasis: {
                            label: {
                                show: true,
                                fontSize: 24,
                                fontWeight: 'bold',
                                formatter: '{b}\n{d}%'
                            }
                        },
                        labelLine: { show: false },
                        data: [
                            {value: 73, name: t.structureDonutSeries[0], itemStyle: {color: '#009144'}},
                            {value: 27, name: t.structureDonutSeries[1], itemStyle: {color: '#212529'}}
                        ]
                    }]
                });
            }
            
            // Forecast Chart (Still used)
            if (document.getElementById('forecastChart')) {
                forecastChart = echarts.init(document.getElementById('forecastChart'));
                forecastChart.setOption({
                    title: { text: t.forecastTitle, textStyle: { color: '#212529', fontSize: 18 } },
                    tooltip: { trigger: 'axis' },
                    legend: { data: t.forecastLegend, bottom: 0 },
                    xAxis: { type: 'category', data: ['2025 Q4', '2026 Q1', '2026 Q2', '2026 Q3', '2026 Q4', '2027'] },
                    yAxis: [{
                        type: 'value',
                        name: t.forecastYAxis1,
                        position: 'left',
                        axisLine: { lineStyle: { color: '#009144' } }
                    }, {
                        type: 'value',
                        name: t.forecastYAxis2,
                        position: 'right',
                        axisLine: { lineStyle: { color: '#FFB800' } }
                    }],
                    series: [{
                        name: t.forecastLegend[0],
                        type: 'line',
                        smooth: true,
                        data: [7, 6.5, 6, 5.5, 5, 5],
                        lineStyle: { width: 3, color: '#009144' },
                        areaStyle: {
                            color: new echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                                offset: 0, color: 'rgba(0, 145, 68, 0.2)'
                            }, {
                                offset: 1, color: 'rgba(0, 145, 68, 0.02)'
                            }])
                        }
                    }, {
                        name: t.forecastLegend[1],
                        type: 'bar',
                        yAxisIndex: 1,
                        data: [2.5, 3, 3.2, 3.5, 3.8, 12],
                        itemStyle: { color: '#FFB800', borderRadius: [4, 4, 0, 0] }
                    }]
                });
            }
            
            // Responsive charts
            window.addEventListener('resize', function() {
                 // ADDED: Check if chart instance exists before resizing
                if (transactionChart) transactionChart.resize();
                if (luxuryChart) luxuryChart.resize();
                if (developerChart) developerChart.resize();
                if (propertySegmentsChart) propertySegmentsChart.resize();
                if (marketStructureChart) marketStructureChart.resize();
                if (forecastChart) forecastChart.resize();
            });
        }
    </script>

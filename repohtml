        // Helper function for safe text updates
        function updateText(id, html) {
            var el = document.getElementById(id);
            if (el) {
                el.innerHTML = html;
            } else {
                console.warn("[Translation] Element with ID '" + id + "' not found.");
            }
        };

        // *** NEW: Function to toggle mobile menu ***
        function toggleMobileMenu() {
            var menu = document.getElementById('mobile-menu');
            var buttonIcon = document.querySelector('#mobile-menu-button i');
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
                buttonIcon.classList.remove('fa-bars');
                buttonIcon.classList.add('fa-times');
            } else {
                menu.classList.add('hidden');
                buttonIcon.classList.remove('fa-times');
                buttonIcon.classList.add('fa-bars');
            }
        }

        // Function to update all text on the page
        function changeLanguage(lang) {
            currentLang = lang;
            var t = translations[lang];

            // Set page lang and title
            document.documentElement.lang = lang;
            document.title = t.pageTitle;

            // Update Nav
            updateText('navTitle', t.navTitle);
            updateText('navLink1', t.navLink1);
            updateText('navLink2', t.navLink2);
            updateText('navLink3', t.navLink3);
            updateText('navLink4', t.navLink4);

